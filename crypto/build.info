        ebcdic.c uid.c o_time.c o_str.c o_dir.c o_fopen.c \
        threads_pthread.c threads_win.c threads_none.c \
        o_init.c o_fips.c mem_sec.c init.c {- $target{cpuid_asm_src} -} \
